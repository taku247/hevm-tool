{
  "name": "hevm-tool",
  "version": "1.0.0",
  "description": "Tools for interacting with Hyperevm chain",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/dashboard/server.js",
    "dev": "ts-node dashboard/server.ts",
    "dashboard": "npm run dev",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "typecheck": "tsc --noEmit",
    "balance": "node custom/utils/check-token-balances.js",
    "balance:testnet": "node custom/utils/check-token-balances.js --network testnet",
    "balance:mainnet": "node custom/utils/check-token-balances.js --network mainnet",
    "swap:v2:testnet": "node custom/hyperevm-swap/v2-swap-testnet.js",
    "swap:v3:testnet": "node custom/hyperevm-swap/v3-swap-testnet.js",
    "swap:v2:testnet:quote": "node custom/hyperevm-swap/v2-swap-testnet.js --quote-only",
    "swap:v3:testnet:quote": "node custom/hyperevm-swap/v3-swap-testnet.js --quote-only",
    "faucet": "node custom/hyperevm-swap/faucet-guide.js",
    "faucet:info": "node custom/hyperevm-swap/faucet-guide.js --info",
    "faucet:generate": "node custom/hyperevm-swap/faucet-guide.js --generate",
    "faucet:check": "node custom/hyperevm-swap/faucet-guide.js --check",
    "monitor:dex": "ts-node custom/monitoring/dex-rate-monitor.ts",
    "monitor:rate": "ts-node custom/monitoring/simple-rate-check.ts",
    "monitor:flexible": "ts-node custom/monitoring/flexible-dex-monitor.ts",
    "investigate:decimals": "node custom/investigate/get-token-decimals.js",
    "investigate:v3": "node custom/investigate/improved-v3-test.js",
    "investigate:compare": "node custom/investigate/test-v1-v2-comparison.js",
    "test:mocha": "mocha 'tests/**/*.test.js' --timeout 30000",
    "test:safe-swap": "mocha 'tests/swap-validation.test.js' --timeout 10000",
    "test:integration": "mocha 'tests/integration/**/*.test.js' --timeout 60000",
    "demo:safe-swap": "node safe-swap-demo.js",
    "safe-swap": "node safe-swap-demo.js"
  },
  "dependencies": {
    "@uniswap/sdk-core": "^7.7.2",
    "@uniswap/smart-order-router": "^4.22.5",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^5.7.2",
    "express": "^4.18.2",
    "node-fetch": "^2.7.0",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^6.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/supertest": "^2.0.16",
    "@types/ws": "^8.5.10",
    "chai": "^4.5.0",
    "hardhat": "^2.25.0",
    "jest": "^29.7.0",
    "mocha": "^10.8.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "hyperevm",
    "blockchain",
    "ethereum",
    "tools"
  ],
  "author": "",
  "license": "MIT"
}
